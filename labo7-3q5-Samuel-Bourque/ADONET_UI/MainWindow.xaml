<Window x:Class="ADONET_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADONET_UI"
        mc:Ignorable="d"
        Title="Exercice 7 ADO.NET" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Button.Margin" Value="10"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <Button Click="AfficherCoursSession">Afficher les cours de la session 5</Button>
            <Button Click="DeterminerNbCoursInfo">Determiner le nombre de cours d'info</Button>
            <Button Click="AjouterCoursTrump">Ajouter nouveau cours (Trump)</Button>
            <Button Click="DoublerTheorieSession5">Doubler theorie session 5</Button>
            <Button Click="SupprimerCoursPhilo">Supprimer les cours de philo</Button>
            <Button Click="AfficherCoursSessionDA">Afficher les cours de la session 5 (DA/DS)</Button>
        </StackPanel>
        <TextBox Name="tbMessages" DockPanel.Dock="Top" FontSize="20"/>
    </DockPanel>
</Window>
